---
import '@fontsource/inter/variable.css';
import '@fontsource-variable/bitter';
---

<style is:inline is:global>
  :root {
    --aw-font-sans: 'InterVariable';
    --aw-font-serif: var(--aw-font-sans);
    --aw-font-heading: 'Bitter Variable';

    --aw-color-primary: rgb(17, 24, 39);
    --aw-color-secondary: rgb(15, 118, 110);
    --aw-color-accent: rgb(84, 194, 180);
    --aw-color-text-page: rgb(17 24 39);
    --aw-color-text-muted: rgb(75 85 99);
    --aw-color-bg-page: rgb(249 250 251);
  }
</style>
